<View controllerName="nz.co.foodstuffs.apps.business.stocktake.management.controller.App" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m" 
	xmlns:f="sap.f" 
	xmlns:core="sap.ui.core" displayBlock="true">
	<Shell>
		<f:DynamicPage id="dynamicPageId">
			<!-- DynamicPage Title -->
			<f:title>
				<f:DynamicPageTitle>
					<f:heading >
						<Title text="{i18n>stocktake_session_title}"/>
					</f:heading>
				</f:DynamicPageTitle>
			</f:title>

			<!-- DynamicPage Content -->
			<f:content>
				<Table id="idEventsTable" inset="false" items="{						
						path: 'StocktakeEvents>/' 
						}" mode="MultiSelect">
					<headerToolbar height='auto'>
						<Toolbar>
							<content>
								<!-- <Title text="Filters"/> -->
								<Label text="Filters"/>
								<SearchField placeholder='User' showSearchButton="false" search="onSearch" width="15%"/>
								<SearchField placeholder='Storage Bin' showSearchButton="false" search="onSearch" width="15%"/>
								<SearchField placeholder='Vendor' showSearchButton="false" search="onSearch" width="15%"/>
								<SearchField placeholder='Status' showSearchButton="false" search="onSearch" width="15%"/>
							</content>
						</Toolbar>
					</headerToolbar>
					<columns>
						<Column width="12em">
							<Text text="Article Id" />
						</Column>
						<Column minScreenWidth="Phone">
							<Text text="Article Name" />
						</Column>
						<Column minScreenWidth="Phone" demandPopin="true">
							<Text text="Quantity" />
						</Column>
						<Column minScreenWidth="Phone" demandPopin="true">
							<Text text="User" />
						</Column>
						<Column minScreenWidth="Phone" demandPopin="true">
							<Text text="Time" />
						</Column>
						<Column minScreenWidth="Phone">
							<Text text="Status" />
						</Column>
						<Column minScreenWidth="Phone">
							<Text text="Stocktake" />
						</Column>
					</columns>
					<items>
						<ColumnListItem>
							<cells>
								<Text text="{StocktakeEvents>article/id}" />
								<Text text="{StocktakeEvents>article/name}" />
								<Text text="{StocktakeEvents>quantity/value} {StocktakeEvents>quantity/unit/description}" />
								<Text text="{StocktakeEvents>createdBy/username}" />
								<!-- <Text text="{StocktakeEvents>createdOn}" /> -->
								<Text text="{
								path: 'StocktakeEvents>createdOn',
								formatter: '.formatDateTime' 
									}" />
								<Text text="{undefined}" />
								<Text text="{StocktakeEvents>document/id}" />
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</f:content>
		</f:DynamicPage>
	</Shell>
</View>
